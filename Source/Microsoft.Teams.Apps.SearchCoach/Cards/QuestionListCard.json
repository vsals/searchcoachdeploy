{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "$when": "${isquestionAlreadySent}",
      "text": "${alreadySentQuestionText}",
      "size": "medium",
      "weight": "bolder",
      "color": "attention",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "${questionsCardBodyTitleText}",
      "size": "large",
      "weight": "bolder"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "choiceset",
      "style": "expanded",
      "isMultiSelect": false,
      "value": "${if(isquestionAlreadySent, questionValue, '1')}",
      "choices": [
        {
          "type": "Input.Choice",
          "$data": "${QuestionList}",
          "title": "${title}",
          "value": "${value}"
        }
      ],
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "id": "submit",
      "title": "${questionsCardSendButtonText}",
      "data": {
        "action": "questionselector"
      }
    }
  ]
}