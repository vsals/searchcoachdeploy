{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "text": "${titleText}",
      "size": "default",
      "weight": "bolder"
    },
    {
      "type": "TextBlock",
      "text": "${headingText}",
      "size": "default",
      "weight": "lighter",
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "${deepLinkButtonText}",
      "url": "${tabDeepLinkUrl}"
    }
  ]
}