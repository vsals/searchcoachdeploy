{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "$when": "${isSubmitted}",
      "text": "${thankNoteText}",
      "size": "medium",
      "weight": "bolder"
    },
    {
      "type": "TextBlock",
      "$when": "${isSubmitted}",
      "text": "${Answer}",
      "weight": "bolder",
      "color": "${if(isCorrectAnswer == true, 'good', 'attention')}"
    },
    {
      "type": "TextBlock",
      "$when": "${!isCorrectAnswer}",
      "text": "${wrongAnswerMessageText}",
      "weight": "Lighter"
    },
    {
      "size": "Large",
      "text": "${question}",
      "type": "TextBlock",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "$when": "${!isSubmitted}",
      "text": "${userSendMessageText}",
      "size": "Medium",
      "weight": "Lighter",
      "wrap": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "choiceset",
      "style": "expanded",
      "isMultiSelect": false,
      "value": "${if(isSubmitted, selectedOption, '5')}",
      "choices": [
        {
          "title": "${option1}",
          "value": "${option1}"
        },
        {
          "title": "${option2}",
          "value": "${option2}"
        },
        {
          "title": "${option3}",
          "value": "${option3}"
        },
        {
          "title": "${option4}",
          "value": "${option4}"
        }
      ]
    },
    {
      "type": "ColumnSet",
      "$when": "${!isCorrectAnswer}",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "size": "medium",
              "text": "${correctAnswerMessageText}",
              "weight": "Default"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Default",
              "size": "medium",
              "text": "${correctOption}",
              "wrap": true
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "ColumnSet",
      "$when": "${isSubmitted}",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "${submitNoteText}",
              "size": "medium",
              "weight": "Default"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Default",
              "size": "medium",
              "text": "${notes}",
              "wrap": true
            }
          ],
          "width": "stretch"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "${showCardTextBoxText}",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "TextBlock",
            "text": "${textBoxLabelText}",
            "size": "Medium",
            "spacing": "None",
            "weight": "Lighter",
            "wrap": true
          },
          {
            "type": "Input.Text",
            "id": "Search coach",
            "isMultiline": false,
            "value": "${question}"
          }
        ],
        "actions": [
          {
            "type": "Action.OpenUrl",
            "title": "${openUrlButtonText}",
            "url": "${searchPageRedirectionPath}"
          }
        ]
      }
    },
    {
      "type": "Action.Submit",
      "$when": "${!isSubmitted}",
      "id": "submit",
      "title": "${submitActionButtonText}",
      "data": {
        "action": "questionselector",
        "questionId": "${questionId}",
        "userDetail": "${createdBy}",
        "notes": "${notes}",
        "teamId": "${teamId}",
        "sentByUserId": "${sentByUserId}"
      }
    }
  ]
}